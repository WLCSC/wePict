<h1>Your Question Banks</h1>

<table class="table">
  <tr>
		<th>Name</th>
		<th>Questions</th>
    <th>Notes</th>
  </tr>

<% @banks.each do |bank| %>
  <tr>
      <td><%= link_to bank.name, user_bank_path(current_user.id, bank.id, :room_id => params[:room_id]) %></td>
		<td><%= bank.questions.count %></td>
    <td><%= bank.notes %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Bank', new_user_bank_path(current_user), :class => 'btn btn-primary' %>
<%= link_to "Back to Room", @room, :class => 'btn btn-inverse' %>
