<h1>Question Banks for <%= @room.name %></h1>

<table class="table">
  <tr>
		<th>Name</th>
		<th>Questions</th>
    <th>Notes</th>
  </tr>

<% @banks.each do |bank| %>
  <tr>
		<td><%= link_to bank.name, [@room, bank] %></td>
		<td><%= bank.questions.count %></td>
    <td><%= bank.notes %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Bank', new_room_bank_path(@room), :class => 'btn btn-primary' %>
<%= link_to "Back to Room", @room, :class => 'btn btn-inverse' %>
