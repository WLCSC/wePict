<%= simple_form_for([current_user, @bank, @question]) do |f| %>
    <%= f.error_notification %>
    <%= hidden_field_tag :room_id,  params[:room_id] %>

	<div class="form-inputs">
		<%= f.input :content, :as => :text, :input_html => {:rows => 4} %>
		<%= f.input :notes, input_html: {:rows => '4'} %>
		<%= f.input :sequence %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
